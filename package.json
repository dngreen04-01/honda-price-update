{
  "name": "honda-price-scraper",
  "version": "1.0.0",
  "description": "Automated supplier website price and offer scraper with Shopify sync",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:api": "tsx watch src/server.ts",
    "start": "node dist/index.js",
    "start:api": "node dist/server.js",
    "start:scheduler": "node dist/index.js --mode=scheduler",
    "dev:scheduler": "tsx src/index.ts --mode=scheduler",
    "dev:scheduler:now": "tsx src/index.ts --mode=scheduler --run-now",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:components": "tsx src/scripts/test-components.ts",
    "verify:shopify": "tsx src/scripts/verify-shopify.ts",
    "shopify:refresh": "node refresh-shopify-simple.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "scrape": "tsx src/index.ts",
    "scrape:test": "tsx test-scraper-small.ts",
    "scrape:bulk": "tsx src/scripts/bulk-scrape.ts",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:verify": "node verify-migration.js"
  },
  "keywords": [
    "scraper",
    "shopify",
    "price-monitoring",
    "scrapling"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/tasks": "^5.1.0",
    "@google/generative-ai": "^0.24.1",
    "@sendgrid/mail": "^8.1.0",
    "@sentry/node": "^10.38.0",
    "@shopify/shopify-api": "^11.5.0",
    "@supabase/supabase-js": "^2.39.0",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.6.5",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "google-auth-library": "^9.6.0",
    "jsdom": "^23.2.0",
    "node-cron": "^4.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vitest/coverage-v8": "^1.1.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  }
}
