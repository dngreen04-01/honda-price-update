{
  "name": "honda-price-scraper",
  "version": "1.0.0",
  "description": "Automated supplier website price and offer scraper with Shopify sync",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:components": "tsx src/scripts/test-components.ts",
    "verify:shopify": "tsx src/scripts/verify-shopify.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "scrape": "tsx src/index.ts",
    "db:migrate": "tsx src/scripts/migrate.ts"
  },
  "keywords": [
    "scraper",
    "shopify",
    "price-monitoring",
    "firecrawl"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "@shopify/shopify-api": "^11.5.0",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "jsdom": "^23.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vitest/coverage-v8": "^1.1.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  }
}
